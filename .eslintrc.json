{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "none", // No trailing commas
                "semi": true, // Add semicolons at the end of statements
                "singleQuote": true,
                "tabWidth": 4,
                "useTabs": false,
                "endOfLine": "auto",
                "SwitchCase": 1 // Indent `case` clauses by 1 level
            }
        ],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "semi": ["error", "always"]
    }
}
